@model QuizVM
@{
    ViewData["Title"] = "Star Wars Quiz";
}

<div>
    <h1 class="display-4">Star Wars Quiz</h1>
    <form method="post" class="container">
        <label asp-for="UserAnswer1" class="control-label">What Name did Obi-Wan Kenobi use while in hiding?</label>
        <input asp-for="UserAnswer1" type="text" class="form-control pb-1" />
        <p>@Model?.RightOrWrong1</p>
        <br />
        <label asp-for="UserAnswer2" class="control-label">What planet was Anakin Skywalker from?</label>
        <input asp-for="UserAnswer2" type="text" class="form-control pb-1" />
        <p>@Model?.RightOrWrong2</p>
        <br />
        <label asp-for="UserAnswer3" class="control-label">What was Kylo Rens birth name?</label>
        <input asp-for="UserAnswer3" type="text" class="form-control pb-1" />
        <p>@Model?.RightOrWrong3</p>
        <br />
        <label asp-for="UserAnswer4" class="control-label">Han Solo was frozen in what?</label>
        <input asp-for="UserAnswer4" type="text" class="form-control pb-1" />
        <p>@Model?.RightOrWrong4</p>
        <br />
        <input type="submit" class="form-control btn" />
    </form>
    <p><a href="/Home">Home</a></p>
</div>
