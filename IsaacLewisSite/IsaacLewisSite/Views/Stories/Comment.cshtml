@model CommentVM
@{
    ViewData["Title"] = "Comment";
}
<h1>Story</h1>
<strong>Enter your Comment</strong>
<form method="post" class="container">
    <div class="row p-2">
        <label asp-for="CommentText" class="control-label col-md-1">Comment</label><br />
        <textarea asp-for="CommentText" placeholder="Write your comment here" class="form-control col-md-6"></textarea>
    </div>
    <div class="row p-2">
        <button type="submit" class="form-control btn btn-success col-2">Submit</button>
    </div>
</form>

