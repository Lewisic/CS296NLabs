@model Story
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<h1 class="display-4 d-flex justify-content-center">Add a Story</h1>
<div class="container d-flex justify-content-center">
    <form method="post">
        <div asp-validation-summary="All"></div>
        
        <input asp-for="StoryTitle" placeholder="Title" class="py-1" style="width: 200px"/><br />

        <input asp-for="StoryTopic" placeholder="Topic" class="py-1" style="width: 200px" /><br />

        <input asp-for="StoryDate" placeholder="Year the story took place" class="py-1" style="width: 200px" /><br />

        <textarea asp-for="StoryText" placeholder="Story" style="width: 200px"></textarea><br />

        <button type="submit" class="btn-primary">Submit</button>
    </form>
</div>